files:
    "/etc/cron.d/entitlements_cleanup":
        mode: "000644"
        owner: root
        group: root
        content: |
            PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

            # Run Manually Via Artisan (Requires PHP Config exists in command line PHP)
            0 2 * * * webapp cd /var/app/current; /usr/bin/php artisan entitlements:cleanup --silent >> /var/app/current/storage/logs/entitlements_cleanup.log 2>&1

commands:
    remove_old_cron:
        command: "rm -f /etc/cron.d/entitlements_cleanup.bak"
